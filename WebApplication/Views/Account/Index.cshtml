@model WebApplication.Models.ViewModels.LoginModel
@{
    ViewData["Title"] = "Вход";
}

<div class="container white z-depth-5">
    <div class="col s12">
        <form class="col s12" asp-action="Index" asp-controller="Account">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div class="form-container">
                <h3 class="teal-text center">Добро пожаловать</h3>
                <div class="row">
                    <div class="col s1 input-field">
                        <i class="material-icons input-field-icon">person</i>
                    </div>
                    <div class="input-field col s11">
                        <label asp-for="Login" class="control-label"></label>
                        <input id="login" asp-for="Login" class="form-control" />
                        <span asp-validation-for="Login" class="text-danger" />
                    </div>
                </div>
                <div class="row">
                    <div class="col s1 input-field">
                        <i class="material-icons input-field-icon">lock</i>
                    </div>
                    <div class="input-field col s11">
                        <label asp-for="Password" class="control-label"></label>
                        <input id="password" asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger" />
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>
                <br>
                <center>
                    <button class="btn btn-large waves-effect waves-light teal" type="submit" name="action">Войти</button>
                </center>
            </div>
        </form>
    </div>
</div>

<script>   
    $("#login").focus();
</script>