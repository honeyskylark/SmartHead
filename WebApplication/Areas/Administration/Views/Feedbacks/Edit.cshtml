@model WebApplication.Models.Feedback
@{
    ViewData["Title"] = "Редактирование";
}

<nav class="nav-container white">
    <div class="nav-wrapper">
        <div class="col s12">
            <a asp-controller="Feedbacks" asp-action="Index" asp-area="Administration" class="breadcrumb teal-text">Отзывы</a>
            <a class="breadcrumb grey-text breadcrumb-child active">@ViewData["Title"]</a>
        </div>
    </div>
</nav>

<div class="crud-container white z-depth-1 s1">
    <h4 class="teal-text">@ViewData["Title"]</h4>
    <hr class="hr-crud-split" />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Content" class="control-label"></label>
            <textarea asp-for="Content" class="materialize-textarea"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <br />
        <div class="input-field">
            <select asp-for="UserId" asp-items="ViewBag.UserId"></select>
            <label asp-for="UserId"></label>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
        <center>
            <button type="submit" class="btn btn-large waves-effect waves-light teal crud-command-button" asp-controller="Feedbacks" asp-area="Administration" asp-action="Edit">Редактировать</button>
        </center>
    </form>
</div>
<script>
    $(document).ready(function () {
        $('select').formSelect();
    });
</script>

