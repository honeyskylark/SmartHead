@model IEnumerable<WebApplication.Models.User>

@{
    ViewData["Title"] = "Пользователи";
}

<div class="crud-container white z-depth-1 s1">
    <h4 class="teal-text">@ViewData["Title"]</h4>
    <table class="striped ">
        <thead>
            <tr class="crud-header">
                <th>ID</th>
                <th>Логин</th>
                <th>Имя</th>
                <th>Роль</th>
                <th>Голоса</th>
                <th class="crud-command-actions">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
            <tr>
                <td>@user.Id</td>
                <td>@user.Login</td>
                <td>@user.FirstName</td>
                <td>@user.Role.Name</td>
                <td>@user.VotesCounter</td>
                <td class="crud-command-actions">
                    <a asp-controller="Users" asp-area="Administration" asp-action="Details" asp-route-id="@user.Id"><i class="material-icons small teal-text">remove_red_eye</i></a>
                    <a asp-controller="Users" asp-area="Administration" asp-action="Edit" asp-route-id="@user.Id"><i class="material-icons small teal-text">edit</i></a>
                    <a asp-controller="Users" asp-area="Administration" asp-action="Delete" asp-route-id="@user.Id"><i class="material-icons small teal-text">delete</i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    <hr class="hr-crud-split" />
    <center>
        <a class="btn btn-large waves-effect waves-light teal crud-command-button" asp-controller="Users" asp-area="Administration" asp-action="Create">Добавить</a>
    </center>
</div>
