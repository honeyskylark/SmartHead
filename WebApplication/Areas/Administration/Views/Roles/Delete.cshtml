@model WebApplication.Models.Role

@{
    ViewData["Title"] = "Удаление";
}

<nav class="nav-container white">
    <div class="nav-wrapper">
        <div class="col s12">
            <a asp-controller="Roles" asp-action="Index" asp-area="Administration" class="breadcrumb teal-text">Роли</a>
            <a class="breadcrumb grey-text breadcrumb-child active">@Model.Name</a>
        </div>
    </div>
</nav>

<div class="crud-container white z-depth-1 s1">
    <h4 class="teal-text">Вы уверены что хотите это удалить?</h4>
    <hr class="hr-crud-split" />
    <dl class="dl-horizontal">
        <dt class="details-dt">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="details-dt">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <hr class="hr-crud-split" />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <center>
            <button type="submit" class="btn btn-large waves-effect waves-light teal crud-command-button" asp-controller="Roles" asp-area="Administration" asp-action="Delete">Удалить</button>
        </center>
    </form>
</div>
